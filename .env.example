NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./src/logs

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username_or_organization
GITHUB_REPO=your_github_repository_name

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW=15 # in minutes
RATE_LIMIT_MAX=100 # requests per window
API_KEY=your_api_key_for_agent_authentication

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_PORT=3001

# External APIs
API_TIMEOUT=30000 # in milliseconds
API_RETRIES=3

# Cron Jobs
CRON_ENABLED=true

# Deployment
MAX_CONCURRENT_DEPLOYS=3
DEPLOY_TIMEOUT=300000 # in milliseconds
